<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping>
    <class name="test.Employee" table="Employee" discriminator-value="emp">
    <id name="id" column="Id">
    <generator class="increment"></generator>
    </id>
    
    <discriminator column = "type" type = "string"></discriminator>
    <property name = "name" column = "Name"></property>
    
    <subclass name = "test.Reg_emp" discriminator-value = "reg_emp">
        <property name = "salary" column = "salary"></property>
        <property name = "bonus" column = "bonus"></property>
    </subclass>
    
    <subclass name = "test.Contract_emp" discriminator-value = "con_emp">
        <property name = "pay_per_hour" column = "pay_per_hour"></property>
        <property name = "contract_period" column = "contract_period"></property>
    </subclass>
    
    </class>
</hibernate-mapping>