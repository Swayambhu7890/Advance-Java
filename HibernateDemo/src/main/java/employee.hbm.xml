<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping>        <!-- Base Tag of xml file --> <!--hibernate-mapping specifies to which class in database is to be mapped in table form  -->
    <class name="test.Employee" table="Employee1234">
    <id name="id" column="eid">                           <!-- To decide which column is primary key(only one id ,but it can have multiple property) -->
    <generator class="increment"></generator>             <!-- Auto increment -->
    </id>

    <property name="name" column="ename"></property>    <!-- name = "name" attribute indicates name from a bean class  columns(actual columns created in database)-->

    <property name="salary" column="esalary"></property>
    </class>
</hibernate-mapping>