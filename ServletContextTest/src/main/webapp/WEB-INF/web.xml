<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
  <display-name>ServletContextTest</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
    <servlet> 
      <servlet-name>ServletContextClass</servlet-name>
      <servlet-class>com.ServletContextClass</servlet-class>  
    </servlet>
  
    <servlet> 
       <servlet-name>ServletTwo</servlet-name>
       <servlet-class>com.ServletTwo</servlet-class>  
    </servlet>
  
    <context-param>                                                            <!--Initialization Parameter -->
        <param-name>project</param-name>                                       <!--To set the parameters to the Servlet-->
        <param-value>general</param-value>
    </context-param>
    
    <servlet-mapping>                                                          <!--Servlet Mapping:-It helps us to run our servlet -->
       <servlet-name>ServletContextClass</servlet-name>
       <url-pattern>/ServletContextClass</url-pattern> 
    </servlet-mapping>
   
   <servlet-mapping>                                                           <!--Servlet Mapping:-It helps us to run our servlet -->
       <servlet-name>ServletTwo</servlet-name>
       <url-pattern>/ServletTwo</url-pattern> 
   </servlet-mapping>
    
    
</web-app>